root = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.mk]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
indent_size = 2
intent_style = space

[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
